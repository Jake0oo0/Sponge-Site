.container
  .row
    .col-md-3
      = render 'partials/account'
    .col-md-9
      %h2 Avatar Settings
      %hr/
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render 'partials/errors', object: resource
        %p
          = f.label :avatar_serve, 'Avatar Server'
          = f.select(:avatar_serve, ['Crafatar', 'Gravatar'].map { |value| [ value, value ] }, {}, {class: 'form-control'})
          .help-block Crafatar will serve your Minecraft avatar if your account is linked, while Gravatar while serve an avatar based on your email.
        %p
          = f.submit 'Save', class: 'btn btn-primary'
