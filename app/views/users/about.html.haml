.container
  .row
    .col-md-3
      = render 'partials/account'
    .col-md-9
      %h2 About Me
      %hr/
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render 'partials/errors', object: resource
        %p
          = f.label :location
          = f.text_field :location, class: 'form-control'
        %p
          = f.label :gender
          = f.select(:gender, ['Male', 'Female'].map { |value| [ value, value ] }, {}, {class: 'form-control'})
        %p
          = f.label :github
          = f.text_field :github, class: 'form-control'
        %p
          = f.label :about
          = f.text_area :about, class: 'form-control', rows: 8
          .help-block You may use Markdown to style your about text.
        %p
          = f.submit 'Save', class: 'btn btn-primary'
