        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path, style: "margin-left: 30px;"} Sponge
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav{style: "margin-left: 20px;"}
        %li{class: "#{active("home")}"}
          %a{href: root_path}
            %i.fa.fa-home
            &nbsp;
            Home
        %li
          %a{href: "http://forums.spongepowered.org/", target: '_blank'}
            %i.fa.fa-list
            &nbsp;
            Forums
        %li{class: "#{active("downloads")}"}
          %a{href: downloads_path}
            %i.fa.fa-download
            &nbsp;
            Downloads
        %li.dropdown{class: "#{active("resources")}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %i.fa.fa-file-o
            &nbsp;
            Resources
            %i.fa.fa-caret-down
          %ul.dropdown-menu{role: "menu"}
            %li
              %a{href: root_path}
                %i.fa.fa-file
                &nbsp;
                Wiki
            %li
              %a{href: rules_path}
                %i.fa.fa-book
                &nbsp;
                Rules
            %li
              %a{href: terms_path}
                %i.fa.fa-eye
                &nbsp;
                Terms
            %li
              %a{href: "https://github.com/SpongePowered"}
                %i.fa.fa-github
                &nbsp;
                Github
        %li.dropdown{class: "#{active("plugins")}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %i.fa.fa-search
            &nbsp;
            Plugins
            %i.fa.fa-caret-down
          %ul.dropdown-menu{role: "menu"}
            %li
              %a{href: plugins_path}
                %i.fa.fa-search
                &nbsp;
                Plugins
            %li
              %a{href: new_plugin_path}
                %i.fa.fa-plus
                &nbsp;
                Submit Plugin
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            - if current_user
              = avatar(current_user, :size => 16)
              = current_user.username
            - else
              %i.fa.fa-user
          %ul.dropdown-menu{role: "menu"}
            - if current_user
              %li= link_to 'Logout', destroy_user_session_path, method: :delete
              %li= link_to 'Profile', user_path(current_user)
              %li= link_to 'Edit Account', user_about_path(current_user)
            - else
              %li= link_to 'Sign up', new_user_registration_path
              %li= link_to 'Login', new_user_session_path