.page-header
  %h1 
    New Reply - Forums
    %small= @topic.forum.title
    .pull-right
      = link_to 'Cancel', @topic.forum, class: 'btn btn-danger'

%h2{align: "center"}
  = t("forem.post.new")
  / - if @reply_to_post
  /   = render 'reply_to_post', :post => @reply_to_post
  / - else
  %em= @topic.subject
.row
  .col-md-12.col-md-offset-2
    = simple_form_for [forem, @topic.forum, @topic, @post] do |f|
      %p
        = render :partial => "form", :locals => { :f => f }
      %p
        = f.submit t("forem.post.buttons.reply"), :class => "btn btn-primary"
