%head
  %title
    - if content_for? :title
      Sponge - #{yield :title}
    - else
      Sponge
  
  %meta{:charset => "UTF-8"}
  -if content_for? :head
    = yield(:head)
  - else
  = favicon_link_tag
  = stylesheet_link_tag 'application', media: 'all'
  = stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css'
  = stylesheet_link_tag '//riksolo.tk/Sponge-Site/app/assets/stylesheets/application.css'
  = javascript_include_tag 'application'
  = csrf_meta_tags
%body
= render 'partials/navbar'
.header-alert
= render 'partials/alerts'
= yield
= render 'partials/footer'