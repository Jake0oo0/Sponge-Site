.page-header
  %h1 Resend Confirmation Instructions
.row
  .col-md-9
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = render 'partials/errors', object: resource
      %p
        = f.email_field :email, autofocus: true, class: "form-control"
      %p
        = f.submit "Send", class: 'btn btn-primary', data: { disable_with: "Sending..." }
  .col-md-3
    %ul.nav.nav-list
      %li
        %a{href: main_app.root_path} Home
      %li
        %a{href: main_app.new_user_session_path} Login
      %li
        %a{href: main_app.new_user_registration_path} Register