.page-header
  %h1 Login
.row
  .col-md-9
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %p
        = f.label :email
        = f.email_field :email, autofocus: true, :class => "form-control", style: "width: 25em" 
      %p
        = f.label :password
        = f.password_field :password, :class => "form-control" , style: "width: 15em"
      %div
        = f.check_box :remember_me 
        = f.label :remember_me
      %p
        = f.submit "Login", class: 'btn btn-primary'
  .col-md-3
    %ul.nav.nav-list
      %li
        %a{href: root_path} Home
      %li
        %a{href: new_user_registration_path} Register